<% flash  do |type, message| %>
    <script>
      $(document).ready(function() {
        setTimeout(function() {
          toastr.options = {
            closeButton: true,
            progressBar: true,
            showMethod: 'slideDown',
            timeOut: 4000
          };
          toastr.error( "<%  message %>");

        }, 1300);

      });
    </script>
<% end %>